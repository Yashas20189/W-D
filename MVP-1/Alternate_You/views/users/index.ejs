<% layout("/layouts/boilerplate.ejs") %>

<body>
  <h3>All Users</h3>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-3">
    <% allUsers.forEach(user => { %>
      <a href="/users/<%= user._id %>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%= user.profileImage?.url || 'https://cdn-icons-png.flaticon.com/512/149/149071.png' %>" class="card-img-top" alt="user_img">

          <div class="card-img-overlay"></div>
          <div class="card-body">
            <h5 class="card-title"><%= user.name || user.username %></h5>
            <p class="card-text">
              <%= user.email %>
            </p>
          </div>
        </div>
      </a>
    <% }) %>
  </div>
</body>
