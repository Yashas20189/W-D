<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">  
      <h3><%= user.username %></h3>
    </div>

    <div class="card col-6 offset-3 show-card listing-card">
      <img src="<%= user.profileImage?.url || 'https://cdn-icons-png.flaticon.com/512/149/149071.png' %>" class="card-img-top show-img" alt="user_img"><br>

      <div class="card-body">
        <p class="card-text">
          <strong>Email:</strong> <%= user.email %> <br>
          <strong>Role:</strong> <%= user.role %>
        </p>
      </div>
    </div>

    <div class="btns">
      <a href="/users/<%= user._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

      <form action="/users/<%= user._id %>?_method=DELETE" method="POST">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
  </div>
</body>
